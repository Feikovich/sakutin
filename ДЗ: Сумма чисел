using System;

namespace MyProject  
{
    class Program    
    {
        static void Main(string[] args)  
        {
            Random rand = new Random();
            int number = rand.Next(0,101);
            int sumNumbers = 0;

            Console.WriteLine("Случайное число:" + number);

            for(int i = 0; i <= number; i++)
            {
                if(i % 3 == 0 || i % 5 == 0)
                {
                    sumNumbers += i;
                }
            }
            Console.WriteLine("Сумма всех чисел кратных 3 или 5 равняется:" + sumNumbers);

        }
    }
}
