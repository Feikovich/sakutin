using System;

namespace MyProject  
{
    class Program    
    {
        static void Main(string[] args)  
        {
            const string CommandDollarInRubles = "1";
            const string CommandDollarInEuro ="2";
            const string CommandRublesInDollars = "3";
            const string CommandRublesInEuro = "4";
            const string CommandEuroInRubles = "5";
            const string CommandEuroInDollars ="6";
            const string CommandClearConsole ="7";
            const string CommandExit ="8";

            float userRubles;
            float userDollars;
            float userEuro;
            float amountOfExchange;
            float dollarInRubles = 81.50f;
            float dollarInEuro = 0.88f;
            float rublesInDollars = 0.012f;
            float rublesInEuro = 0.011f;
            float euroInRubles = 90.66f;
            float euroInDollars = 0.011f;
            bool isRunning = true;
            string userInput;

            Console.WriteLine("Здравствуйте! Вы попали в конвертер валют");
            Console.WriteLine("Сколько у вас долларов?");
            userDollars = Convert.ToSingle(Console.ReadLine());

            Console.WriteLine("Сколько у вас рублей?");
            userRubles = Convert.ToSingle(Console.ReadLine());

            Console.WriteLine("Сколько у вас евро");
            userEuro = Convert.ToSingle(Console.ReadLine());

            while (isRunning)
            {
                Console.WriteLine("Конвертер валют");
                Console.WriteLine($"Ваш баланс рублей: {userRubles}");
                Console.WriteLine($"Ваш баланс евро: {userEuro}");
                Console.WriteLine($"Ваш баланс долларов: {userDollars}");
                
                Console.WriteLine("Выбери нужную вам команду");
                Console.WriteLine($"{CommandDollarInRubles} - Доллары в рубли - курс = {dollarInRubles}");
                Console.WriteLine($"{CommandDollarInEuro} - Доллары в евро - курс = {dollarInEuro}");
                Console.WriteLine($"{CommandRublesInDollars} - Рубли в доллары - курс = {rublesInDollars}");
                Console.WriteLine($"{CommandRublesInEuro} - Рубли в евро - курс = {rublesInEuro}");
                Console.WriteLine($"{CommandEuroInRubles} - Евро в рубли - курс = {euroInRubles}");
                Console.WriteLine($"{CommandEuroInDollars} - Евро в доллары - курс = {euroInDollars}");
                Console.WriteLine($"{CommandClearConsole} - Очистить консоль");
                Console.WriteLine($"{CommandExit} - Выход из конвертера валют");

                userInput = Console.ReadLine();

                switch(userInput)
                {
                    case CommandDollarInRubles:
                        Console.WriteLine("Выбран обмен долларов на рубли");
                        Console.Write("Какое количество валюты вы хотите обменять?:");
                        amountOfExchange = Convert.ToSingle(Console.ReadLine());

                        if (amountOfExchange > userDollars)
                        {
                            Console.WriteLine("У вас недостаточно баланса!");
                        }
                        else
                        {
                            userDollars -= amountOfExchange;
                            userRubles += amountOfExchange * dollarInRubles;
                        }
                        break;

                    case CommandDollarInEuro:
                        Console.WriteLine("Выбран обмен долларов на евро");
                        Console.Write("Какое количество валюты вы хотите обменять?:");
                        amountOfExchange = Convert.ToSingle(Console.ReadLine());

                        if (amountOfExchange > userEuro)
                        {
                            Console.WriteLine("У вас недостаточно баланса!");
                        }
                        else
                        {
                            userDollars -= amountOfExchange;
                            userEuro += amountOfExchange * dollarInEuro;
                        }
                        break;

                    case CommandRublesInDollars:
                        Console.WriteLine("Выбран обмен рублей на доллары");
                        Console.Write("Какое количество валюты вы хотите обменять?:");
                        amountOfExchange = Convert.ToSingle(Console.ReadLine());

                        if (amountOfExchange > userRubles)
                        {
                            Console.WriteLine("У вас недостаточно баланса!");
                        }
                        else
                        {
                            userRubles -= amountOfExchange;
                            userDollars += amountOfExchange * rublesInDollars;
                        }
                        break;

                    case CommandRublesInEuro:
                        Console.WriteLine("Выбран обмен рублей на евро");
                        Console.Write("Какое количество валюты вы хотите обменять?:");
                        amountOfExchange = Convert.ToSingle(Console.ReadLine());

                        if (amountOfExchange > userRubles)
                        {
                            Console.WriteLine("У вас недостаточно баланса!");
                        }
                        else
                        {
                            userRubles -= amountOfExchange;
                            userEuro += amountOfExchange * rublesInEuro;
                        }
                        break;

                    case CommandEuroInRubles:
                        Console.WriteLine("Выбран обмен евро на рубли");
                        Console.Write("Какое количество валюты вы хотите обменять?:");
                        amountOfExchange = Convert.ToSingle(Console.ReadLine());

                        if (amountOfExchange > userEuro)
                        {
                            Console.WriteLine("У вас недостаточно баланса!");
                        }
                        else
                        {
                            userEuro -= amountOfExchange;
                            userRubles += amountOfExchange * euroInRubles;
                        }
                        break;

                    case CommandEuroInDollars:
                        Console.WriteLine("Выбран обмен евро на доллары");
                        Console.Write("Какое количество валюты вы хотите обменять?:");
                        amountOfExchange = Convert.ToSingle(Console.ReadLine());

                        if (amountOfExchange > userEuro)
                        {
                            Console.WriteLine("У вас недостаточно баланса!");
                        }
                        else
                        {
                            userEuro -= amountOfExchange;
                            userDollars += amountOfExchange * euroInDollars;
                        }
                        break;
                    
                    case CommandClearConsole:
                        Console.Clear();
                        break;

                    case CommandExit:
                        isRunning = false;
                        Console.WriteLine("Вы вышли из программы!");
                        break;

                    default:
                        Console.WriteLine("Вы ввели неправильную команду");
                        break;
                }
            }
        }
    }
}
