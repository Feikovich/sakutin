using System;

namespace MyProject  
{
    class Program    
    {
        static void Main(string[] args)  
        {
            Random random= new Random();
            
            int lowerLimit = 1;
            int upperLimit = 100;
            int randomNumber = 4;
            int countOfDegrees = 1;
            int numberWithDegrees = 2;
            int degree = 2;

            Console.WriteLine($"Случайное число: {randomNumber}");

            while (randomNumber >= numberWithDegrees)
            {
                numberWithDegrees = numberWithDegrees * degree;
                countOfDegrees++;
            }
            Console.WriteLine($"Число превозмогающее случайное: {numberWithDegrees}");
            Console.WriteLine($"Количество степеней двойки: {countOfDegrees}");
        }
    }
}
