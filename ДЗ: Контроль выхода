using System;

namespace MyProject  
{
    class Program    
    {
        static void Main(string[] args)  
        {
            string stopWord = "exit";
            string userInput = "";

            while(userInput != stopWord)
            {
                Console.WriteLine("Грабители воруют печеньки, введите стоп слово чтобы это прекратилось!");
                userInput = Console.ReadLine();    
            }
            
            Console.WriteLine("вы спасли печеньки!");
        }
    }
}
