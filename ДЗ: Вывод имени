using System;

namespace MyProject  
{
    class Program    
    {
        static void Main(string[] args)  
        {
            char userSymbol;
            string userName;
            string userNameWithSymbols;
            string multipleSymbols = "";

            Console.WriteLine("Введите ваше имя");
            userName = Console.ReadLine();

            Console.WriteLine("Введите ваш символ");
            userSymbol = Console.ReadKey(true).KeyChar;
            Console.Clear();

            userNameWithSymbols = userSymbol + userName + userSymbol;

            for (int i = 0; i < userNameWithSymbols.Length; i++)
            {
                multipleSymbols = multipleSymbols + userSymbol;
            }
            Console.WriteLine(multipleSymbols);
            Console.WriteLine(userNameWithSymbols);
            Console.WriteLine(multipleSymbols);
        }
    }
}
