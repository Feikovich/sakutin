using System;

namespace MyProject  
{
    class Program    
    {
        static void Main(string[] args)  
        {
            const string CommandGetCookies = "1";
            const string CommandGetMilk = "2";
            const string CommandSeeRandomNumber = "3";
            const string CommandClearConsole = "4";
            const string CommandExitProgramm = "5";

            Random random = new Random();

            bool isExitCommandWritten = false;
            int maxRandomNumber = 100;
            string userInput;
           

            while(isExitCommandWritten == false)
            {
                Console.WriteLine("Меню");
                Console.WriteLine($"Введите нужную вам команду:");
                Console.WriteLine($"{CommandGetCookies} - для того чтобы получить печеньки");
                Console.WriteLine($"{CommandGetMilk} - для того чтобы получить молоко");
                Console.WriteLine($"{CommandSeeRandomNumber} - Увидеть случайное число от 0 до 100");
                Console.WriteLine($"{CommandClearConsole} - Очистить консоль");
                Console.WriteLine($"{CommandExitProgramm} - Выйти из программы");

                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case CommandGetCookies:
                        Console.WriteLine("Вы получили печеньки!");
                        break;

                    case CommandGetMilk:
                        Console.WriteLine("Вы получили молоко!");
                        break;

                    case CommandSeeRandomNumber:
                        int randomNumber = random.Next(0,maxRandomNumber + 1);
                        Console.Write("Ваше случайное число:");
                        Console.Write(randomNumber);
                        Console.WriteLine("");
                        break;

                    case CommandClearConsole:
                        Console.Clear();
                        break;

                    case CommandExitProgramm:
                        isExitCommandWritten = true;
                        break;
                        
                    default:
                        Console.WriteLine("Вы ввели неправильную команду");
                        break;
                }
            }
            
            Console.WriteLine("Вы вышли из программы!");
        }
    }
}
