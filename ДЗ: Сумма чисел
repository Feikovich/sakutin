using System;

namespace MyProject  
{
    class Program    
    {
        static void Main(string[] args)  
        {
            Random random = new Random();
            int maxNumber = 100;
            int number = random.Next(0,maxNumber + 1);
            int sumNumbers = 0;
            int firstDivisor = 3;
            int secondDivisor = 5;
            
            Console.WriteLine("Случайное число:" + number);

            for(int i = 0; i <= number; i++)
            {
                if(i % firstDivisor == 0 || i % secondDivisor == 0)
                {
                    sumNumbers += i;
                }
            }
            
            Console.WriteLine("Сумма всех чисел кратных 3 или 5 равняется:" + sumNumbers);

        }
    }
}
